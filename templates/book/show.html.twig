
<table class="table">
        <tbody>
            <tr>
                <th>Référence</th>
                <td>{{ book.ref }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ book.category }}</td>
            </tr>
            <tr>
                <th>Date de Publication</th>
                <td>{{ book.publicationDate|date('d-m-Y') }}</td>
            </tr>
            <tr>
                <th>Publié</th>
                <td>{{ book.published ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('list_books') }}">Retour à la liste des livres</a>